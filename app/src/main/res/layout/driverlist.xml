            android:textSize="13sp" />

        <TextView
            android:id="@+id/line_e1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:text="Model"
            android:textColor="@color/gold"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/line_e2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
